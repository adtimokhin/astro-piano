---
interface Props{
    backgroundColor: Array<number>,
    keyboardKey: string
}

const { backgroundColor, keyboardKey } = Astro.props;

---

<div class="w-full h-[7em] rounded-l-[10px] flex align-middle key-container hover:translate-x-7 hover:cursor-pointer trasnition ease-in-out duration-200" id={keyboardKey}>
    <div class="bg-slate-600/10 rounded-[10px] w-[4em] h-[4em] flex justify-center align-middle self-center ml-[1.75em]">
        <p class="font-Ranade font-medium text-white text-[1.5em] self-center">{keyboardKey}</p>
    </div>
</div>

<style define:vars={{backgroundColor}}>
    .key-container {
        background-color: rgb(var(--backgroundColor));
    }

    .playing{
        background-color: rgba(var(--backgroundColor), 0.4);
    }
</style>
