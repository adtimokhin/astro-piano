--- 
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="">
		<slot />
	</body>
</html>

<style is:global>
	@font-face {
  font-family: "Ranade";
  font-weight: bold;
  src: url("../public/fonts/Ranade-Bold.otf");
}

@font-face {
  font-family: "Ranade";
  font-weight: normal;
  src: url("../public/fonts/Ranade-Medium.otf");
}
</style>
